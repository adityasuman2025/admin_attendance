<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10px">

    <ImageView
        android:id="@+id/student_icon"
        android:layout_width="120px"
        android:layout_height="120px"
        app:srcCompat="@drawable/student_icon" />

    <LinearLayout
        android:id="@+id/stud_details"
        android:layout_width="wrap_content"
        android:layout_height="150px"

        android:layout_toEndOf="@id/student_icon"
        android:layout_toRightOf="@id/student_icon"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingTop="10px">

        <TextView
            android:id="@+id/student_roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roll No"
            android:textStyle="bold"
            android:textSize="50px"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="45px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/stud_percent"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="60%"
        android:textStyle="bold"
        android:textSize="60px"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20px"
        android:paddingRight="15px"
        />
</RelativeLayout>